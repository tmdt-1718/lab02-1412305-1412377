<div class="row">
    <div class="col-8 mx-auto">
        <div class="bg-info text-white pl-3">
            New Message
        </div>
        <div>   
            <form method="post" action="/mails" accept-charset="UTF-8" data-remote="true">
                <input name="utf8" type="hidden" value="âœ“">
                <input type="hidden" name="authenticity_token" value="...">
                <div class="input-group">
                    <div class="input-group-addon bg-white text-muted" style="width:77px">To</div>
                    <div class="form-control border-left-0">
                        <select name="receivers[]" data-placeholder="Choose an email" multiple id="receivers" class="form-control">
                        <% @friends.each do |friend| %>
                            <option value="<%= friend.id %>"> 
                                <%= friend.name %>
                                ( <%= friend.email %> )
                            </option>
                        <% end %>
                        </select>
                    </div>
                </div>
                <div class="input-group">
                    <div class="input-group-addon bg-white text-muted"  style="width:77px">Subject</div>
                    <input class="form-control form-control-sm border-left-0" name="subject" type="Text"></input>
                </div>
                <textarea class="form-control" rows="10" name="content"></textarea>
                <div class="border border-light">
                    <button type="submit" class="btn btn-info" style="width:100px">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

