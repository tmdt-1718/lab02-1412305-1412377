<div class="container">
  <div class="card">
    <div class="card-header">
        <h4>Subject: <%= @message.subject %></h4>
        <% if @sender.id == current_user.id %>
            <small>From: me to <%= @receiver.name %></small>
        <% else %>
            <small>From: <%= @sender.name %> to me</small>
        <% end %>
    </div>
    <div class="card-body"><%= @message.content %></div>
    <div class="card-footer text-right pr-3">Created at: <%= @message.created_at.in_time_zone("Hanoi").to_formatted_s(:short) %></div>
  </div>
</div>
